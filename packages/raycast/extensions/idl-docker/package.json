{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "idl-docker",
  "title": "IDL Docker",
  "description": "Manage IDL Docker containers across git worktrees",
  "icon": "extension-icon.png",
  "author": "ammonkc",
  "categories": ["Developer Tools"],
  "license": "MIT",
  "commands": [
    {
      "name": "start",
      "title": "Start Containers",
      "description": "Start IDL Docker containers for a worktree",
      "mode": "view"
    },
    {
      "name": "stop",
      "title": "Stop Containers",
      "description": "Stop IDL Docker containers for a worktree",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "baseDir",
      "title": "Worktrees Directory",
      "description": "Base directory containing git worktrees",
      "type": "textfield",
      "required": true,
      "default": "~/Developer/code/indirect"
    },
    {
      "name": "defaultWorktree",
      "title": "Default Worktree",
      "description": "Default worktree to use",
      "type": "textfield",
      "required": false,
      "default": "main"
    },
    {
      "name": "allegroDomain",
      "title": "Allegro Domain",
      "description": "Domain for the ALLEGRO_DOMAIN environment variable",
      "type": "textfield",
      "required": false,
      "default": "indirect.test"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.64.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.10.0",
    "@types/react": "18.2.38",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
