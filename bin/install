# Color helper functions
info() { echo -e "\033[0;34mâš™ï¸  $1\033[0m"; }
success() { echo -e "\033[0;32mâœ“ $1\033[0m"; }
error() { echo -e "\033[0;31mâŒ $1\033[0m"; }
warning() { echo -e "\033[1;33mâš ï¸  $1\033[0m"; }

XDG_BIN_DIR=${XDG_BIN_DIR:-$HOME/.local/bin}

if ! command -v task > /dev/null; then
  # Install task
  info "Installing task..."
  mkdir -p $XDG_BIN_DIR
  sh -c "$(curl --location https://taskfile.dev/install.sh)" -- -d -b $XDG_BIN_DIR || {
    error "Failed to install task"
    exit 1
  }
  success "Task installed successfully"
else
  success "Task already installed"
fi

export PATH="$PATH:$XDG_BIN_DIR"

task install

success "Setup complete! ðŸŽ‰"
